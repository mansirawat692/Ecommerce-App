<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".user.ConformOrder">



    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="#2BE9F3"
        android:text="Confirm Details for Shipping"
        android:textSize="20dp"
        android:gravity="center"
        android:padding="10dp"
        android:textStyle="bold"
        android:id="@+id/conform"
        android:layout_margin="20dp"></TextView>



   <EditText
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:layout_below="@+id/conform"
       android:layout_marginTop="140dp"
       android:id="@+id/conname"
       android:layout_marginLeft="50dp"
       android:layout_marginRight="50dp"
       android:hint="Full Name"
       android:paddingLeft="8dp"
       android:textColorHint="#2BE9F3"
       android:textColor="#2BE9F3"
       android:textSize="15dp"></EditText>




    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/conname"
        android:layout_marginTop="20dp"
        android:id="@+id/conphone"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:paddingLeft="8dp"
        android:hint="Phone Number"
        android:textColorHint="#2BE9F3"
        android:textColor="#2BE9F3"
        android:textSize="15dp"></EditText>




    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/conphone"
        android:layout_marginTop="20dp"
        android:id="@+id/conadd"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:hint="House Address"
        android:textColorHint="#2BE9F3"
        android:paddingLeft="8dp"
        android:textColor="#2BE9F3"
        android:textSize="15dp"></EditText>




    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/conadd"
        android:layout_marginTop="20dp"
        android:id="@+id/concity"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:hint="City"
        android:paddingLeft="8dp"
        android:textColorHint="#2BE9F3"
        android:textColor="#2BE9F3"
        android:textSize="15dp"></EditText>



    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="#2BE9F3"
        android:layout_margin="10dp"
        android:text="CONFIRM"
        android:textColor="#ffffff"
        android:textStyle="bold"
        android:textSize="20dp"
        android:elevation="6dp"
        android:id="@+id/con"></Button>
</RelativeLayout>